.without_sidebar
  = form_with(model: @brand, local: true, url: admin_brandpage_update_path, class: 'formtastic admin_user', method: :patch) do |f|
    = f.hidden_field(:id)
    %fieldset.inputs
      %ol
        %li.input.required.stringish
          = f.label(:name, class: 'label')
          = f.text_field(:name)
          - unless @brand.errors[:name].empty?
            %p.inline-errors
              = @brand.errors[:name].join(', ')
    %fieldset.actions
      %ol
        %li.action.input_action
          = f.submit(I18n.t('save'))