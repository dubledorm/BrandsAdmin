.without_sidebar
  .panel
    %h3
      = Brand.model_name.human
    .panel_contents
      = render partial: 'shared/attribute_table', locals: { subject: @brand }

  = form_with(model: @brand, local: true, url: admin_brandpage_save_files_to_brand_path, class: 'formtastic admin_user') do |f|
    = f.hidden_field(:id)
    %fieldset.inputs
      %ol
        %li.input.required.stringish
          = f.label(:name, class: 'label')
          = f.text_field(:name)
          - unless @brand.errors[:name].empty?
            %p.inline-errors
              = @brand.errors[:name].join(', ')
    %fieldset.actions
      %ol
        %li.action.input_action
          = f.submit(I18n.t('save'))