.without_sidebar
  = form_with(model: @postamat, local: true, url: admin_postamatpage_create_path, class: 'formtastic admin_user') do |f|
    %fieldset.inputs
      %ol
        = text_input_field(f, :number, @postamat)
        = text_input_field(f, :url, @postamat)
        = text_area_input_field(f, :description, @postamat, required: false)
    %fieldset.actions
      %ol
        %li.action.input_action
          = f.submit(I18n.t('save'))