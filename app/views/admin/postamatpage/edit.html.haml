.without_sidebar
  = form_with(model: @postamat, local: true, url: admin_postamatpage_update_path, class: 'formtastic admin_user', method: :patch) do |f|
    = f.hidden_field(:id)
    %fieldset.inputs
      %ol
        = text_input_field(f, :number, @postamat)
        = text_input_field(f, :url, @postamat)
        = text_area_input_field(f, :description, @postamat, false)
    %fieldset.actions
      %ol
        %li.action.input_action
          = f.submit(I18n.t('save'))